
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ logement.nom }} - Troc Mon Toit</title>
   
</head>
<body>

<h1>{{ logement.nom }}</h1>

<p>Ville: {{ logement.ville }}</p>
<p>Type de Logement: {{ logement.type_logement }}</p>
<p>Prix par Nuit: ${{ logement.prix_nuit }}</p>

<h2>Équipements Disponibles</h2>
{% if logement.equipements|length > 0 %}
    <ul>
        {% for equipement in logement.equipements %}
            <li>{{ equipement.nom }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun équipement disponible.</p>
{% endif %}

<h2>Services Disponibles</h2>
{% if logement.services|length > 0 %}
    <ul>
        {% for service in logement.services %}
            <li>{{ service.nom }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun service disponible.</p>
{% endif %}

<h2>Disponibilités</h2>
{% if logement.disponibilites|length > 0 %}
    <ul>
        {% for disponibilite in logement.disponibilites %}
            <li>{{ disponibilite.date_debut }} à {{ disponibilite.date_fin }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucune disponibilité renseignée.</p>
{% endif %}

<h2>Réservations</h2>
{% if logement.reservations|length > 0 %}
    <ul>
        {% for reservation in logement.reservations %}
            <li>Réservation du {{ reservation.date_debut }} au {{ reservation.date_fin }} par {{ reservation.utilisateur.nom }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucune réservation enregistrée.</p>
{% endif %}

<h2>Commentaires</h2>
{% if logement.commentaires|length > 0 %}
    <ul>
        {% for commentaire in logement.commentaires %}
            <li>{{ commentaire.utilisateur.nom }} a dit : "{{ commentaire.texte }}"</li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucun commentaire pour le moment.</p>
{% endif %}

<h2>Équipements et Services Additionnels</h2>
{% set nouveaux_equipements = [
    'Machine à laver', 'Sèche-linge', 'Télévision', 'Fer à repasser / Planche à repasser',
    'Nintendo Switch', 'PS5', 'Terrasse', 'Balcon', 'Piscine', 'Jardin'
] %}
<ul>
    {% for equipement in nouveaux_equipements %}
        <li>{{ equipement }}</li>
    {% endfor %}
</ul>

<!-- Ajout des nouveaux services -->
{% set nouveaux_services = [
    'Transferts aéroport', 'Petit-déjeuner', 'Service de ménage', 'Location de voiture',
    'Visites guidées', 'Cours de cuisine', 'Loisirs'
] %}
<ul>
    {% for service in nouveaux_services %}
        <li>{{ service }}</li>
    {% endfor %}
</ul>


</body>
</html>
